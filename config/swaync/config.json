{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "control-center-margin-top": 20,
  "control-center-margin-bottom": 50,
  "control-center-margin-right": 20,
  "control-center-margin-left": 30,
  "control-center-width": 500,
  "control-center-height": 950,
  "fit-to-screen": false,

  "layer": "top",
  "cssPriority": "user",
  "notification-icon-size": 64,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  
  "timeout": 6,
  "timeout-low": 3,
  "timeout-critical": 0,
  
  "notification-window-width": 480,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": true,
  "hide-on-action": true,
  "script-fail-notify": true,

  "widgets": [
    "title",
    "dnd",
    "notifications",
    "mpris"
  ],
  "widget-config": {
    "title": {
      "text": "Sakura Center",
      "clear-all-button": true,
      "button-text": "Clear All"
    },
    "dnd": {
      "text": "Do Not Disturb"
    },
    "mpris": {
      "image-size": 70,
      "image-radius": 12,
	  "autohide": true
    }
  }
}